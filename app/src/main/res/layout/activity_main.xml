<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="work.flyergw.smarthome.MainActivity">


    <Button
        android:id="@+id/btn_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:text="@string/btn_detect"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/showTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="111dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#300c0c"
        android:textSize="25sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/add_ip"
        android:layout_alignBottom="@id/add_ip"
        android:gravity="center"
        android:id="@+id/ip_address"
        android:hint="@string/ip_address"
        android:textSize="23sp" />

    <ImageButton
        android:id="@+id/add_ip"
        android:layout_width="50dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        app:srcCompat="@mipmap/add" />

</RelativeLayout>
